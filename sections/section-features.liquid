{% assign _section = section.settings %}
{% assign blocks = section.blocks %}

{% if blocks.size > 0 %}
  <section class="section-icons">
    <div class="shell">
      {% if _section.content != blank %}
        <div class="section__head">
          <p>
            {{ _section.content | escape | newline_to_br }}
          </p>
        </div><!-- /.section__head -->
      {% endif %}

      <div class="section__body">
        <ul class="list-icons">
          {% for block in blocks %}
            {% assign _block = block.settings %}

            {% if _block.title != blank and _block.icon != blank %}
              <li>
                {{ _block.icon | img_url: '200x' | img_tag }}

                <span>{{ _block.title | escape }}</span>
              </li>
            {% endif %}
          {% endfor %}
        </ul><!-- /.list-icons -->
      </div><!-- /.section__body -->
    </div><!-- /.shell -->
  </section><!-- /.section-icons -->
{% endif %}

{% schema %}
{
  "name": "Features",
  "settings": [
    {
      "type": "textarea",
      "id": "content",
      "label": "Content"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features"
    }
  ]
}
{% endschema %}